<div class="row">
	<div class="col-sm-2" style="padding: 5px;">
		<table class="table" style="border: 1px solid lightgray;">
			<thead>
				<tr class="active">
					<th>記事ランキング</th>
				</tr>
			</thead>
			<tbody>
				<% @post_ranks.each_with_index do |post_rank, i| %>
				<tr style="border-top: 1px solid lightgray;">
					<td><%= i + 1 %>: <%= link_to post_rank.title, post_path(post_rank), style: "color: gray;" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<table class="table" style="border: 1px solid lightgray; margin-top: 20px;">
			<thead>
				<tr class="active">
					<th>人気クリエイター</th>
				</tr>
			</thead>
			<tbody>
				<% @users.each_with_index do |user, i| %>
				<tr style="border-top: 1px solid lightgray;">
					<td><%= i + 1 %>: <%= link_to user.name, user_path(user), style: "color: gray;" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-sm-7">
		<div class="row">

		<% @posts.each do |post| %>
			<div class="col-sm-4 col-xs-6" style="padding: 5px;">
				<div class="post" style="height: 200px; border: 1px solid lightgray;">
					<div class="post-image" style="height: 120px;">
						<%= link_to post_path(post) do %>
							<%= attachment_image_tag post, :image, :fill, 210, 120, format: "jpeg", fallback: "no_image.jpg", size: "210x120", style: "width: 100%;" %>
						<% end %>
					</div>
					<div class="detail" style="padding: 10px;">
						<%= link_to post_path(post) do %>
							<h4 style="font-size: 15px;"><%= post.title %></h4>
						<% end %>
						<div class="footer" id="like-<%= post.id %>">
							<span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></span>
							<span style="font-size: 12px;"><%= post.likes.count %></span>
							<span style="margin-left: 8px; font-size: 12px;"><%= post.created_at.to_s(:datetime) %></span>
						</div>
					</div>
				</div>
			</div>
		<% end %>

		</div>
	</div>
	<div class="col-sm-3" style="padding: 0;">
		<div class="category-list" style="border: 1px solid lightgray;">
			<table class="table">
				<thead>
					<tr>
						<th class="active">人気タグ</th>
					</tr>
				</thead>
				<tbody style="border-top: 1px solid lightgray;">
					<tr>
						<td>
							<% @tags.each do |tag| %>
								<%= link_to tag, search_path(search_tag: tag.name, sort: "新着順"), class: "badge badge-default" %>
							<% end %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>