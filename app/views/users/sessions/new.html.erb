<div class="sign_in" align="center" style="max-width: 500px; height: 400px; padding: 60px 20px 20px 20px; border: 0.1px solid lightgray;">
  <h2>ログイン</h2>
  <div class="form" style="max-width: 300px;">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control", style: "margin: 30px 0 10px 0;" %>
      <%= f.password_field :password, placeholder: "パスワード", class: "form-control" %>
      <%= f.submit "ログイン", class: "btn btn-lg btn-primary", style: "margin: 20px 0 15px 0;" %>
    <% end %>
  </div>
  <%= link_to "会員登録はこちら", new_user_registration_path, style: "color: gray;" %>
</div>
