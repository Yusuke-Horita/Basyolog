<tr>
	<td rowspan="2" class="profile-image-td position-top">
		<%= link_to user_path(comment.user) do %>
			<%= attachment_image_tag comment.user, :profile_image, :fill, 40, 40, size: "40x40", format: "jpeg", fallback: "no_image.jpg", class: "comment-profile-image" %>
		<% end %>
	</td>
	<td>
		<span style="display: block;"><%= comment.user.name %></span>
		<span style="font-size: 10px; color: gray;"><%= comment.created_at.to_s(:datetime) %></span>
	</td>
	<td style="padding: 22px 0 0 0;" align="right">
		<% if current_user == comment.user || admin_signed_in? %>
			<%= link_to "削除", comment_path(comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
		<% end %>
	</td>
</tr>
<tr>
	<td colspan="2" style="padding-top: 0;"><%= comment.body %></td>
</tr>