<div class="new-post" style="max-width: 700px;">
	<div class="row" style="padding: 15px;">
	<% @posts.each do |post| %>
		<div class="post col-sm-4 col-xs-6" style="padding: 0 5px 10px 5px;">
			<%= link_to post_path(post) do %>
				<div class="post" style="height: 200px; border: 0.1px solid lightgray;">
					<div class="post-image" style="height: 60%;">
						<%= attachment_image_tag post, :image, :fill, 220, 120, format: "jpeg" %>
					</div>
					<div class="detail" style="padding: 10px;">
						<h5><%= post.title %></h5>
						<div class="footer">
							<%= post.created_at %>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	<% end %>
	</div>
</div>