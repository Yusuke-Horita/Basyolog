<div class="sign-up shadow" align="center">
  <h2>新規登録</h2>
  <div class="sign-up-form">
    <div class="errors" align="left">
      <% if resource.errors.any? %>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.text_field :name, placeholder: "名前", class: "name-form form-control" %>
      <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "email-form form-control" %>
      <%= f.password_field :password, placeholder: "パスワード", class: "form-control" %>
      <%= f.password_field :password_confirmation, placeholder: "パスワード(確認)", class: "confirm-form form-control" %>
      <%= f.submit "新規登録", class: "sign-up-btn btn btn-lg btn-primary" %>
    <% end %>
  </div>
  <%= link_to "ログインはこちら", new_user_session_path %>
</div>