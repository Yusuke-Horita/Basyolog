<div class="new-post" align="center" style="max-width: 500px; height: 500px; padding: 60px 20px 20px 20px; border: 0.1px solid lightgray;">
  <h2>新規登録</h2>
  <div class="form" style="max-width: 300px;">
    <div class="errors" align="left">
      <% if resource.errors.any? %>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.text_field :name, placeholder: "名前", class: "form-control", style: "margin: 30px 0 10px 0;" %>
      <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
      <%= f.password_field :password, placeholder: "パスワード", class: "form-control", style: "margin: 10px 0 10px 0;" %>
      <%= f.password_field :password_confirmation, placeholder: "パスワード(確認)", class: "form-control" %>
      <%= f.submit "新規登録", class: "btn btn-lg btn-primary", style: "margin: 20px 0 15px 0;" %>
    <% end %>
  </div>
  <%= link_to "ログインはこちら", new_user_session_path, style: "color: gray;" %>
</div>