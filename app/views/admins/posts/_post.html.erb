<table class="table" style="max-width: 800px; border: 1px solid gray;">
		<tr>
			<td rowspan="2" style="padding: 0;">
				<%= link_to admins_post_path(post) do %>
					<%= attachment_image_tag post, :image, :fill, 95, 72, format: "jpeg", fallback: "no_image.jpg", size: "95x72" %>
				<% end %>
			</td>
			<td><%= link_to post.title, admins_post_path(post) %></td>
			<td></td>
			<td rowspan="2" style="vertical-align: middle;">
				<%= link_to "削除", admins_post_path(post), method: :delete, remote: true, class: "btn btn-danger" %>
			</td>
		</tr>
		<tr>
			<td>いいね<span class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"><%= post.likes.count %></td>
			<td>コメント　<%= post.comments.count %></td>
		</tr>
</table>