<div class="sign-in" align="center">
  <h2>管理者ログイン</h2>
  <div class="sign-in-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "email-form form-control" %>
      <%= f.password_field :password, placeholder: "パスワード", class: "form-control" %>
      <%= f.submit "ログイン", class: "sign-in-form btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>