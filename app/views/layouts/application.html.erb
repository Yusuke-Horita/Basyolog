<!DOCTYPE html>
<html>
  <head>
    <title>Blogest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if current_page?(new_admin_session_path) %>

      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <%= link_to "ばしょログ", new_admin_session_path, class: "navbar-brand navbar-left" %>
          </div>
        </div>
      </nav>

    <% else %>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <% if admin_signed_in? %>
              <%= link_to "ばしょログ", admins_users_path, class: "navbar-brand" %>
            <% else %>
              <%= link_to "ばしょログ", root_path, class: "navbar-brand" %>
            <% end %>
          </div>

          <div class="collapse navbar-collapse" id="navbarEexample7">
            <ul class="nav navbar-nav navbar-right">

              <% if user_signed_in? %>
                <li><%= link_to "マイページ", user_path(current_user.id) %></li>
                <li><%= link_to "記事一覧", posts_path %></li>
                <li><%= link_to "記事投稿", new_post_path %></li>
                <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
              <% elsif admin_signed_in? %>
                <li><%= link_to "会員一覧", admins_users_path %></li>
                <li><%= link_to "記事一覧", admins_posts_path %></li>
                <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
              <% else %>
                <li><%= link_to "ログイン", new_user_session_path %></li>
                <li><%= link_to "新規登録", new_user_registration_path %></li>
              <% end %>

            </ul>
          </div>
        </div>
      </nav>
    <% end %>

    <div class="container" style="padding-bottom: 50px;">
      <%= yield %>
    </div>
  </body>
</html>
